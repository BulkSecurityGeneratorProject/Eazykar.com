<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity UserProfile.
    -->
    <changeSet id="20181210192802-1" author="jhipster">
        <createTable tableName="user_profile">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="middle_name" type="varchar(100)">
                <constraints nullable="true" />
            </column>

            <column name="fathers_name" type="varchar(200)">
                <constraints nullable="true" />
            </column>

            <column name="mobile_number" type="varchar(10)">
                <constraints nullable="false" unique="true" uniqueConstraintName="ux_user_profile_mobile_number" />
            </column>

            <column name="pan_number" type="varchar(10)">
                <constraints nullable="false" unique="true" uniqueConstraintName="ux_user_profile_pan_number" />
            </column>

            <column name="address_line_1" type="varchar(200)">
                <constraints nullable="true" />
            </column>

            <column name="address_line_2" type="varchar(200)">
                <constraints nullable="true" />
            </column>

            <column name="address_line_3" type="varchar(200)">
                <constraints nullable="true" />
            </column>

            <column name="address_line_4" type="varchar(200)">
                <constraints nullable="true" />
            </column>

            <column name="city" type="varchar(200)">
                <constraints nullable="true" />
            </column>

            <column name="state" type="varchar(200)">
                <constraints nullable="true" />
            </column>

            <column name="pin_code" type="varchar(6)">
                <constraints nullable="true" />
            </column>
            <column name="user_id" type="bigint">
                <constraints unique="true" nullable="false" uniqueConstraintName="ux_user_profile_user_id" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

    </changeSet>

    <!-- Added the entity audit columns -->
    <changeSet id="20181211142002-audit-1" author="jhipster-entity-audit">
        <addColumn tableName="user_profile">
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>
        </addColumn>
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
